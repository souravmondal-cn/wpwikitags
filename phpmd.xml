        <priority>4</priority>
        <properties>
            <property name="maxfields" value="25" />
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/ExcessivePublicCount">
        <priority>3</priority>
        <properties>
            <property name="minimum" value="50" />
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
        <priority>3</priority>
        <properties>
            <property name="maximum" value="57" />
        </properties>
    </rule>
</pmd>